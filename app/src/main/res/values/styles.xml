<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--text styling-->
    <style name="textTypeHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/playfair_display_sc_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textTypeDate" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/playfair_display_sc_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textTypeMonth" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/playfair_display_sc_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textItemTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textType1_white" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textType1_black" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textType2_white" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textType2_black" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
    </style>



</resources>